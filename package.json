{
  "name": "node-assessment-backend",
  "version": "1.0.0",
  "description": "Node.js developer assessment API (login, registration, user listing, details) using Express and TypeORM with JavaScript only.",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "migration:run": "node ./node_modules/typeorm/cli.js migration:run -d ./src/data-source.js",
    "migration:revert": "node ./node_modules/typeorm/cli.js migration:revert -d ./src/data-source.js",
    "test": "mocha --exit \"test/**/*.test.js\""
  },
  "keywords": [
    "node",
    "express",
    "typeorm",
    "assessment"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "chai": "^5.1.2",
    "mocha": "^11.0.1",
    "nodemon": "^3.1.7",
    "supertest": "^7.1.1"
  }
}
